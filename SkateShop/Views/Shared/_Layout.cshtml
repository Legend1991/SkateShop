<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <a href="/"><h1 id="storename">Skate Shop</h1></a>
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Главная</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            @if(Request.IsAuthenticated) {
                <li><a href="@Url.Content("~/StoreManager/")">Админка</a></li>
            }
        </ul>        
    </div>

    @{Html.RenderAction("CategoryMenu", "Store");}

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
         <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
         </div>
        &copy; 2012 SkateShop.com
    </div>
</body>
</html>
