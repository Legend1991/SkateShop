@model IEnumerable<SkateShop.Models.Item>

@helper Truncate(string input, int length)
{
    if (input.Length <= length) {
        @input
    } else {
        @input.Substring(0, length)<text>...</text>
    }
}

@{
    ViewBag.Title = "Админка";
}

<h2>Админка</h2>

<p>
    @Html.ActionLink("Добавить товар", "Create")
</p>
<table>
    <tr>
        <th>
            Категория
        </th>
        <th>
            Название
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Truncate(item.Title, 25)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ItemId }) |
            @Html.ActionLink("Детали", "Details", new { id=item.ItemId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ItemId })
        </td>
    </tr>
}

</table>